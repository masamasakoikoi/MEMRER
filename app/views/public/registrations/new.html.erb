<div class="container p-3">
  <h4><span style = "background-color: #EEE; padding: 0 20px;">新規会員登録</span></h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
    <table style="margin-left: 30px;">
      <tr>
        <th>
          <p>名前</p>
        </th>
        <td valign = "top">
          <p style="padding-left: 30px;">（姓）<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></p>
        </td>
        <td valign = "top">
          <p style="padding-left: 30px;">（名）<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></p>
        </td>
      </tr>
      
      <tr>
        <th>
          <p>フリガナ</p>
        </th>
        <td valign = "top">
          <p style="padding-left: 30px;">（セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></p>
        </td>
        <td valign = "top">
          <p style="padding-left: 30px;">（メイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></p>
        </td>
      </tr>
      
       <tr>
        <th>
          <p>メールアドレス</p>
        </th>
        <td valign = "top">
          <p style="padding-left: 30px;"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
        </td>
       </tr>
       
       <tr>
        <th>
          <p><%= f.label :"パスワード" %>
          <% if @minimum_password_length %>(<%= @minimum_password_length %> 文字以上)
          <% end %></p>
        </th>
        <td valign = "top">
          <p style="padding-left: 30px;"><%= f.password_field :password, autocomplete: "new-password" %></p>
        </td>
       </tr>
       
      <tr>
        <th>
          <p><%= f.label :"パスワード（確認用）" %></p>
        </th>
        <td valign = "top">
          <p style="padding-left: 30px;"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
        </td>
      </tr>
       
      <tr>
        <th></th>
        <td valign = "top">
          <%= f.submit "新規登録" %>
        </td>
      </tr>
    <% end %>
  </table>
  <h4 class="mt-5"><span class="bg-light">既に登録済みの方</span></h4>
 <%= render "public/shared/links" %>からログインしてください。
</div>

