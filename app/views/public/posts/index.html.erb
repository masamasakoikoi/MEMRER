<h1>投稿一覧</h1>
    <table class='table'>
        <thead>
            <tr>
                <th>店名</th>
                <th>いいね</th>
                <th>口コミ</th>
                <th>コメント</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post_content| %>
            <tr>
                <td><%= post_content.store_name %></td>
                <td>❤️</td>
                <td><%= post_content.review %></td>
                <td>コメント表示</td>
            </tr>
            <% end %>
        </tbody>
    </table>