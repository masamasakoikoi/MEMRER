<div class= "container">
  <div class= "row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class= "row">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :genre_name,placeholder: "ジャンル名" %>
        <%= f.submit"ジャンルを追加", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class= "row">
    <table class= "table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          <td><%= link_to "削除", admin_genre_path(genre), class: 'btn btn-danger',data: {confirm: "本当に削除しますか?"},method: :delete %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
