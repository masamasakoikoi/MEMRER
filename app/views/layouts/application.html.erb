<!DOCTYPE html>
<html>
  <head>
    <title>MENRER</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="shadow-sm" style="background:rgb(255,226,199); position: fixed;width:100%; z-index:10;">
    <nav class="navbar navvar-expand-lg navbar-dark py-3">
      <div class="container-fluid">
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      <p class="notice"><%= notice %></p> 
      <p class="alert"><%= alert %></p>
          <% if user_signed_in? %>
          <a class="navbar" href="/">
            
          </a>
            <li>
              <%= link_to 'トップ', root_path  %>
            </li>
            
            <li>
              <%= link_to '新規投稿', new_post_path  %>
            </li>
            
            <li>
              <%= link_to 'マイページ', user_path(current_user)  %>
            </li>
           
            <li>
              <%= link_to '会員一覧', users_path  %>
            </li>
            
            <li>
              <%= link_to '投稿一覧', posts_path  %>
            </li>
            
            <li>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
            </li>
            
            <% elsif admin_signed_in? %>
            
            <li>
              <%= link_to '会員一覧', admin_users_path  %>
            </li>
            
            <li>
              <%= link_to '投稿一覧', admin_posts_path  %>
            </li>
            
             <li>
              <%= link_to 'ジャンル一覧', admin_genres_path %>
            </li>
           
            
            <li>
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
            </li>
            
            
            
            <% else %>
            
            <li>
              <%= link_to '新規登録', new_user_registration_path  %>
            </li>
            
            <li>
              <%= link_to 'ログイン', new_user_session_path  %>
            </li>
          <% end %>
        </div>
      </nav>
   </header>


  <body>
    <%= yield %>
  </body>
</html>
